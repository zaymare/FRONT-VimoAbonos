<body onload="listarAbonos()">
  <div class="abonos">
    <h2>Registrar Abono</h2>
    <form id="abono-form">
      <input type="text" id="nombre" placeholder="Nombre del Cliente" required>
      <input type="date" id="fecha" placeholder="Fecha" required>
      <input type="number" id="monto" placeholder="Monto" required>
      <button class="btn" type="button" id="Abonito">Registrar Abono</button>
    </form>
  </div>
  <div class="abonos">
    <h2>Listado de Abonos</h2>
    <table>
      <thead>
        <tr>
          <th>Cliente</th>
          <th>Fecha</th>
          <th>Estado</th>
          <th>Monto</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody id="tablaBody">
        <!-- Aquí se mostrarán los abonos -->
      </tbody>
    </table>

    <div id="formulario">
      <div class="container">
        <h3 class="center">Actualizar información</h3>
        <div class="input-field">
          <input placeholder="Nombre del cliente" type="text" id="cliente" />
        </div>
        <div class="input-field">
          <input placeholder="Fecha" type="text" id="fecha2" />
        </div>
        <div class="input-field">
          <input placeholder="Monto" type="text" id="valor" />
        </div>
        <div class="center">
          <button id="aggCli" onclick="actualizarAbonos()" type="button">Actualizar</button>
          <button id="CanCli" onclick="abrirForm()" type="button">Cancelar</button>
        </div>
      </div>
    </div>

    <script src="build/js/abonos.js"></script>
</body>

</html>